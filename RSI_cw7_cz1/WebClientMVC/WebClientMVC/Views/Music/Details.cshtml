@model WebClientMVC.Models.Music

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Music</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10" id="Id">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10" id="Title">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10" id="Genre">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10" id="Author">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Length)
        </dt>
        <dd class="col-sm-10" id="Length">
            @Html.DisplayFor(model => model.Length)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <button id="more-btn" class="form-control" onclick="jsAjax()"> Load next music </button>
</div>
<script>
    function jsAjax() {
        let id = document.getElementById("Id");
        let title = document.getElementById("Title");
        let genre = document.getElementById("Genre");
        let author = document.getElementById("Author");
        let length = document.getElementById("Length");

        let url = '@Url.Action("Next")' + '/' + id.innerHTML;
        fetch(url)
            .then(res => res.json())
            .then((out) => {
                console.log(out);
                console.log();
                id.innerHTML = out['Id'];
                title.innerHTML = out['Title'];
                genre.innerHTML = out['Genre'];
                author.innerHTML = out['Author'];
                length.innerHTML = out['Length'];
            }).catch(err => console.error(err));
    }
</script>